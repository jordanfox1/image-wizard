    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Go API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/api/image-wizard-api"
        },
        {
            "name": "Launch Next.js Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend/image-wizard-frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
        }
    ]
}